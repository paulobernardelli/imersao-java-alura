import java.net.URI;
import java.net.http.HttpClient;
import java.net.http.HttpRequest;
import java.net.http.HttpResponse;
import java.net.http.HttpResponse.BodyHandlers;
import java.util.List;
import java.util.Map;

public class App {

	public static void main(String[] args) throws Exception {	
						
		//fazer uma conex√£o HTTP e buscar os top 250 filmes		
		String url = "https://raw.githubusercontent.com/alura-cursos/imersao-java-2-api/main/TopMovies.json";
		URI endereco = URI.create(url);
		var cliente = HttpClient.newHttpClient();		
	    var request = HttpRequest.newBuilder(endereco).GET().build();
	    HttpResponse<String> response = cliente.send(request,BodyHandlers.ofString());
	    String body = response.body();
	  //  System.out.println(body);
		
		//Parsear os dados - extrair s√≥ os dados que interessam (t√≠tulo, poster, classifica√ß√£o)
		var parser =  new JsonParser();
	    List<Map<String, String>> listaDeFilmes = parser.parse(body);
	    
		//exibir e manipular os dados
	    for (Map<String, String> filme : listaDeFilmes) {	    	
			System.out.println("T√≠tulo: " + filme.get("title"));
			System.out.println("Capa: " + filme.get("image"));
			System.out.println("Nota: " + filme.get("imDbRating"));
			System.out.print("Classifica√ß√£o: " );
			
			for (int i=0;i<Math.round(Double.parseDouble(filme.get("imDbRating")));i++){
				
				System.out.print("üåü");
			}						
			
			System.out.println();
			System.out.println();
		}
		
		

	}

}
